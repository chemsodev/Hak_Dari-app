<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #DACDA4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.LoginController">
   <children>
      <MenuBar layoutY="1.0" prefHeight="26.0" prefWidth="800.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label fx:id="welcomeLabel" alignment="TOP_CENTER" layoutX="302.0" layoutY="182.0" prefHeight="26.0" prefWidth="196.0" text="Welcome .." textAlignment="CENTER">
         <font>
            <Font size="16.0" />
         </font></Label>
      <TextField fx:id="username" layoutX="302.0" layoutY="241.0" prefHeight="36.0" prefWidth="196.0" promptText="username" />
      <PasswordField fx:id="password" layoutX="302.0" layoutY="292.0" prefHeight="36.0" prefWidth="196.0" promptText="password" />
      <Button fx:id="loginBtn" layoutX="361.0" layoutY="346.0" mnemonicParsing="false" onAction="#loginBtnClicked" prefHeight="36.0" prefWidth="77.0" text="Login" />
   </children>
</AnchorPane>
